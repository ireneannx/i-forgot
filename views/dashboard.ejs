<body style="background-color: #000">
  <nav class="navbar navbar-expand-md navbar-light bg-transparent">
    <a class="navbar-brand display-4 border-bottom border-top rounded"
      >Welcome <%= user.name %></a
    >
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a
            class="nav-link text-success border-bottom rounded text-center"
            href="/contact"
            >Contact</a
          >
        </li>
        <li class="nav-item mx-2">
          <a
            class="nav-link text-success border-bottom rounded text-center"
            href="/users/logout"
            >Logout</a
          >
        </li>
      </ul>
    </div>
  </nav>

  <!-- Shows validation errors -->
  <% include ./partials/messages %>
  <!-- Save new passwords -->
  <div class="container my-5">
    <p class="lead">Save Credentials</p>
    <form id="pass-form" method="POST" action="/dashboard">
      <div class="form-group">
        <label for="website">Name of the website</label>
        <input
          type="text"
          id="website"
          name="website"
          class="form-control bg-dark text-white"
          placeholder="Enter Website Name"
        />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control bg-dark text-white"
          placeholder="Enter Email"
        />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control bg-dark text-white"
          placeholder="Enter Password"
        />
      </div>
      <input
        type="submit"
        class="btn btn-primary btn-block mb-2"
        value="Save"
      />
    </form>
  </div>

  <!-- Display passwords -->
  <div class="container my-5">
    <p class="lead">Saved Accounts</p>
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Website</th>
          <th scope="col">Email</th>
          <th scope="col">Password</th>
        </tr>
      </thead>
      <tbody>
        <%- accounts %>
      </tbody>
    </table>
  </div>
</body>
